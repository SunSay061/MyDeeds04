<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="100"
    android:id="@+id/itemTemplateBackground"
    android:background="@drawable/gradient_note_style_neutral"
    android:gravity="center_vertical">

    <View
        android:id="@+id/itemTemplateLeftTag"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:background="@color/otherNoteColor"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/note_text"
        android:textSize="23dp"
        android:layout_weight="55"
        android:text="Some Note Title"
        android:textColor="@color/txtDarkColor"
        android:lines="1"
        android:padding="10dp" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/note_help_text"
        android:textSize="1dp"
        android:layout_weight="0"
        android:text="Some Note Title"
        android:textColor="@color/txtDarkColor"
        android:lines="1"
        android:padding="10dp" />

    <View
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:layout_weight="1"/>

    <TextView
        android:id="@+id/noteStartDate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="20
"
        android:padding="10dp"
        android:text="Dec 11 2017"
        android:textColor="@color/txtBrightColor"
        android:textSize="17sp" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:id="@+id/noteEndDate"
        android:textSize="17sp"
        android:layout_weight="20"
        android:text="Dec 1 2017"
        android:textColor="@color/txtBrightColor"
        android:padding="10dp" />

    <!--<ImageView
        android:id="@+id/delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:src="@android:drawable/ic_notification_clear_all"/>-->

    <CheckBox
        android:id="@+id/completed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

</LinearLayout>